// set the click interval in milliseconds
var clickInterval = 1000;

// find the button element to click
var button = document.getElementById('myButton');

// create a function to simulate a click
function clickButton() {
  button.click();
}

// variable to hold interval ID
var intervalID;

// listen for key presses
document.addEventListener('keydown', function(event) {
  // check if the "l" key is pressed to start the auto clicker
  if (event.code === 'KeyL' && !intervalID) {
    intervalID = setInterval(clickButton, clickInterval);
  }
});

document.addEventListener('keyup', function(event) {
  // check if the "l" key is released to stop the auto clicker
  if (event.code === 'KeyL' && intervalID) {
    clearInterval(intervalID);
    intervalID = null;
  }
});
